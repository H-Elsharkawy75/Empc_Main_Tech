@model Eagles.LMS.Models.Agenda
@{
    ViewBag.Title = "AgendaDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool en = true;

    if (Request.Cookies["Language"] != null)
    {
        en = (Request.Cookies["Language"].Value.ToString() == "en") ? true : false;

    }
}

<div class="header-bc">
    <div class="container">
        <div class="row">

            <div class="col-md-6">

                <div class="title-header">

                    <h3>Agenda Details</h3>

                    <div class="breadcrumbs">
                        <ul>
                            <li><a href="#">@Resources.Global.Home</a> > </li>
                            <li>
                                <A href="/Home/Agenda">@Resources.Global.Agenda</A> >
                            </li>
                        </ul>
                    </div>
                    <!--end breadcrumb-->

                </div>
                <!--end title-header-->

            </div>
            <!--end col-6-->



        </div>
        <!--end row-->
    </div>
    <!--end container-->
</div>
<!--end header-bc-->



<div class="news">
    <div class="container">
        <div class="row">

            <div class="new-description">

                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        @if (Model.AgendaImages != null && Model.AgendaImages.Any())
                        {
                            foreach (var item in Model.AgendaImages)
                            {
                                <li></li>
                            }
                        }
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="@Model.MainImage" alt="...">

                        </div>
                        @if (Model.AgendaImages != null && Model.AgendaImages.Any())
                        {
                            foreach (var item in Model.AgendaImages)
                            {
                                <div class="item">
                                    <img src="@item.Path" alt="...">

                                </div>
                            }
                        }



@*<div class="item active">
                            <img src="~/assets_NewPublic/images/bg_1.jpg" alt="...">

