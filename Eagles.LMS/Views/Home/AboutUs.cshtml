    <div class="gallery-section testimony-section ">




        <div class="team-section">
            <h2 class="mb-4 headh2">@Resources.Global.MeetOurTeam</h2>

            <div class="container">

                <div class="row ftco-animate">
                    <div class="col-md-12">
                        <div class="carousel-team owl-carousel ftco-owl">

                            @foreach (var team in teams)
                            {


                                <div class="item">
