@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@using Eagles.LMS.BLL
@using Eagles.LMS.App_GlobalResources

@{
    UnitOfWork ctx = new UnitOfWork();
    var teams = new List<Team>();
    var board = new List<Board>();
    var setting = ctx.SettingsManager.GetAll().FirstOrDefault();
    var SEO = ctx.SEOManager.GetAll().FirstOrDefault();
    var aboutUs = ctx.AboutUsManager.GetAll().FirstOrDefault();
    bool en = true;

    if (Request.Cookies["Language"] != null)
    {
        en = (Request.Cookies["Language"].Value.ToString() == "en") ? true : false;

    }
    if (en == true)
    {
        teams = ctx.TeamManager.GetAllBind().OrderByDescending(s => s.Id).Where(s => s.NameEnglish != null).ToList();
        board = ctx.BoardManager.GetAllBind().OrderByDescending(s => s.Id).Where(s => s.NameEnglish != null).ToList();
    }
    else
    {
        teams = ctx.TeamManager.GetAllBind().OrderByDescending(s => s.Id).Where(s => s.NameArabic != null).ToList();
        board = ctx.BoardManager.GetAllBind().OrderByDescending(s => s.Id).Where(s => s.NameArabic != null).ToList();
    }



}

@section PageTitle{
    <title>@SEO.AboutUsPageTitle</title>
}
@section metatags{
    <meta name="keywords" content="@SEO.AboutUsPageMetaKeywords " />
    <meta name="description" id="metaDesc" content="@SEO.AboutUsPageMetaDescription" />
    <link rel="canonical" id="canonicalUrl" href="@SEO.AboutUsPageCanonicalUrl" />
}

@section EndHeader{
    <style>
        .news {
            margin-top: -100px;
        }

        .menu li a.active-a2 {
            color: #af7a2c !IMPORTANT;
            border-bottom: 1px solid #fff0;
            font-weight: 500;
        }

        .gallery-section {
            margin-top: 0;
        }

            .gallery-section h2.headh2 {
                color: #000;
            }
    </style>
}

<div class="header-bc">
    <div class="container">
        <div class="row">

            <div class="col-md-6">

                <div class="title-header">

                    <h3>@Resources.Global.Aboutus</h3>

                    <div class="breadcrumbs">
                        <ul>
                            <li><a href="#">@Resources.Global.Home</a> > </li>
                            <li>@Resources.Global.Aboutus</li>
                        </ul>
                    </div>
                    <!--end breadcrumb-->

                </div>
                <!--end title-header-->

            </div>
            <!--end col-6-->



        </div>
        <!--end row-->
    </div>
    <!--end container-->
</div>
<!--end header-bc-->


<div class="news">
    <div class="container">
        <Div class="row">

            <div class="col-md-6">


                <img src="~/assets_NewPublic/images/About1.jpeg" class="img-responsive img-about" />
            </div>
            <div class="col-md-6">
                <img src="~/assets_NewPublic/images/About2.jpeg" class="img-responsive img-about" />
            </div>


            <div class="col-md-2 hidden-xs">
            </div>
            <!--end col-2-->


            <div class="col-md-8 col-xs-12">
