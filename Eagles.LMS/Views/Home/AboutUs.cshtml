                    {
                        @*<h2>
                                @aboutUs.TitleEnglish
                            </h2>*@


                        <p>
                            @Html.Raw(@aboutUs.DescriptionEnglish)
                        </p>
                    }
                    else
                    {
                        @*<h2>
                                @aboutUs.TitleArabic
                            </h2>*@


                        <p>
                            @Html.Raw(@aboutUs.DescriptionArabic)
                        </p>
