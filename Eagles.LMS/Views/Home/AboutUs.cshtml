                                        <div>
                                            <img src="@team.Image" class="img-responsive" />
                                            <div class="text">
                                                @if (en)
                                                {


                                                    <p class="mb-1 name">@team.NameEnglish</p>
                                                    <p class="job">@team.JobTitleEnglish</p>

                                                }
                                                else
                                                {
                                                    <p class="mb-1 name">@team.NameArabic</p>


                                                    <p class="job">@team.JobTitleArabic</p>
                                                }
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            }








                        </div>
                    </div>
                </div>






            </div>

        </div>
    </div>


}







