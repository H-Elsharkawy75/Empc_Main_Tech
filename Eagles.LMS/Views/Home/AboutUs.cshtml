        <!--end row-->
    </div>
    <!--end continer-->
</div>



<Div class="about-bk" style="display:none">
    <div class="container">
        <div class="row">

            <div class="col-md-2">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active first-li">
                        <a href="#home" aria-controls="home" role="tab" data-toggle="tab">

                            @Resources.Global.Home
                        </a>
                    </li>
                    <li class="second-li" role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">@Resources.Global.Vision</a></li>
                    <li class="third-li" role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">@Resources.Global.Mission</a></li>
                </ul>


            </div>
            <!--end col-2-->


            <Div class="col-md-10">

                <!-- Tab panes -->
                <div class="tab-content">

                    @if (en)
                    {
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <p>
                                @Html.Raw(@aboutUs.HomeTapDescriptionEnglish)
                            </p>
                        </div>
                        <!--end tab1--->


                        <div role="tabpanel" class="tab-pane" id="profile">
                            <p>
                                @Html.Raw(@aboutUs.ProfileDescriptionEnglish)
                            </p>
                        </div>
                        <!--end tab2-->


                        <div role="tabpanel" class="tab-pane" id="messages">
                            <p>
                                @Html.Raw(@aboutUs.MessageTapDescriptionEnglish)
                            </p>
                        </div>
                    }
                    else
                    {
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <p>
                                @Html.Raw(@aboutUs.HomeTapDescriptionArabic)
                            </p>
                        </div>
                        <!--end tab1--->


                        <div role="tabpanel" class="tab-pane" id="profile">
                            <p>
                                @Html.Raw(@aboutUs.ProfileDescriptionArabic)
                            </p>
                        </div>
                        <!--end tab2-->


                        <div role="tabpanel" class="tab-pane" id="messages">
                            <p>
                                @Html.Raw(@aboutUs.MessageTapDescriptionArabic)
                            </p>
                        </div>
                    }
                    <!--end tab-3-->


                </div>


            </Div>
            <!--end col10--->



            <Div class="cleaner-h4"></Div>



            <!--end col-12-->




        </div>
        <!--end row-->
    </div>
    <!--end container-->
</Div>
<!--end about-bk-->


@if (setting.ShowBoard)
{
    <div class="gallery-section testimony-section ">
        <div class="team-section">
            <h2 class="mb-4 headh2">@Resources.Global.BoardChairs</h2>
            <div class="container">
                <div class="row ftco-animate">
                    <div class="col-md-12">
                        <div class="carousel-team owl-carousel ftco-owl">

                            @foreach (var _board in board)
                            {

                                if (!string.IsNullOrEmpty(_board.JobDescriptionArabic) && !string.IsNullOrEmpty(_board.JobDescriptionEnglish))
                                {

                                    <div class="item">
                                        <div class="testimony-wrap teamItem">
                                            <a href="/Home/BoardDetails/@_board.Id">

                                                <img src="@_board.Image" class="img-responsive" />
                                                <div class="text">
                                                    @if (en)
                                                    {
                                                        <p class="mb-1 name">@_board.NameEnglish</p>
                                                        <p class="job">@_board.JobTitleEnglish</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="mb-1 name">@_board.NameArabic</p>
                                                        <p class="job">@_board.JobTitleArabic</p>
                                                    }
                                                </div>
                                            </a>

                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <div class="item">
                                        <div class="testimony-wrap teamItem">
                                            <a>

                                                <img src="@_board.Image" class="img-responsive" />
                                                <div class="text">
                                                    @if (en)
                                                    {
                                                        <p class="mb-1 name">@_board.NameEnglish</p>
                                                        <p class="job">@_board.JobTitleEnglish</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="mb-1 name">@_board.NameArabic</p>
                                                        <p class="job">@_board.JobTitleArabic</p>
                                                    }
                                                </div>
                                            </a>

                                        </div>
                                    </div>
                                }



                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}










