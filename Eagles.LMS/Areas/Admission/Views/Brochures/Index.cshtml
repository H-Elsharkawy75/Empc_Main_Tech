<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Update About-US</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission/AboutUS">Home</a></li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        @using (Html.BeginForm("Index", "Brochure", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(s => s.Id)
            @Html.HiddenFor(s => s.Image)


            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">

                            @*<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="mb-3">
                                        <label class="form-label">Title English</label>
                                        <textarea class="textarea"></textarea>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="mb-3">
                                        <label class="form-label">Title English</label>
                                        <h1>TinyMCE Quick Start Guide</h1>
                                        <form method="post">
                                            <textarea class="textarea" id="mytextarea2">Hello, World!</textarea>
                                        </form>

                                    </div>
                                </div>*@

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="row">
                                    @*<div>
                                        <div>
                                            <h1>Last User Edited : </h1>   <p>@ctx.UserManager.GetBy(Model.UserEditId).FullName</p>
                                            <h1>Last Edited Time : </h1>    <p>@Model.EditeTime</p>
                                        </div>
                                    </div>*@




                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description Arabic</label>
                                            @Html.TextAreaFor(s => s.DescriptionArabic, new
                                       {
                                           @class = "form-control FontArabic ",
                                           placeholder = "Description Arabic"
                                       })
                                            @Html.ValidationMessageFor(s => s.DescriptionArabic)
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description English</label>
                                            @Html.TextAreaFor(s => s.DescriptionEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Description English"
                                       })
                                            @Html.ValidationMessageFor(s => s.DescriptionEnglish)
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="mb-3">
                                                    <label for="formFile" class="form-label">Image  <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:512px, H:612px)</span></label>
                                                    <input class="form-control" name="uploadattachments" type="file" id="uploadattachments">
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                @if (Model != null && Model.Image != null)
                                                {
                                                    <img style="max-width: auto; height: 210px " src="@Model.Image" />
                                                    
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="mb-3">
                                                    <label for="formFile" class="form-label">PDF  <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:512px, H:612px)</span></label>
                                                    <input class="form-control" name="uploadattachments" type="file" id="uploadattachments">
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                @if (Model != null && Model.PdfLink != null)
                                                {
                                           
                                                    <a href="@Model.PdfLink" class="btn btn-info">Show PDF</a>
                                                }
                                            </div>
                                        </div>
                                    </div>




                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div> <!-- end col -->


            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="foooterbuttons">

                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i> @Resources.Global.Save
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

</div>


