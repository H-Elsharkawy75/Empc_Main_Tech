@model BoardTaps
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admission/Views/Shared/_Layout.cshtml";
    var requestStatus = TempData.Peek("RequestStatus") as RequestStatus;
    //var Boarders = new Eagles.LMS.BLL.UnitOfWork().BoardManager.GetAllBind();
    var Taps = new Eagles.LMS.BLL.UnitOfWork().BoardTapsManager.GetAllBind().Where(a => a.Parent_Id == 0).ToList();
    Taps.Add(new BoardTaps { Id = 0, Title_EN = "No Perant" });
    Taps = Taps.OrderBy(a => a.Id).ToList();
    var Id = ViewBag.Id;

}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Add Adds</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission/BoardTaps">Home</a></li>
                        <li class="breadcrumb-item active">Adds News</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        @using (Html.BeginForm("Create", "BoardTaps", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">



                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="row">

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Name Arabic</label>
                                            @Html.TextBoxFor(s => s.Title_AR, null, new
                                               {
                                                   @class = "form-control",
                                                   placeholder = "Name Arabic"
                                               })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Name English</label>
                                            @Html.TextBoxFor(s => s.Title_EN, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Name English"
                                       })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description Arabic</label>
                                            @Html.TextAreaFor(s => s.Description_AR, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description Arabic"
                                       })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description English</label>
                                            @Html.TextAreaFor(s => s.Description_EN, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description Arabic"
                                       })
                                        </div>
                                    </div>

                                    @*<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Select Board </label>
                                            @Html.DropDownListFor(x => Model.Board_Id, new SelectList(Boarders,
                                           "Id", "NameEnglish"), htmlAttributes: new { @class = "form-control select2" })


                                        </div>
                                    </div>*@
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Select Tap</label>
                                            @Html.DropDownListFor(x => Model.Parent_Id,

                                            new SelectList(Taps,"Id", "Title_EN"),
                                            htmlAttributes: new { @class = "form-control select2" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Order</label>
                                            @Html.TextBoxFor(s => s.Order, null, new
                                            {
                                                @class = "form-control",
                                                placeholder = "Order",
                                                @required = "@required"
                                            })
                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div> <!-- end col -->


            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="foooterbuttons">
                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i> @Resources.Global.Save
                            </button>
                            <a href="/Admission/BoardTaps/Index/@Id" class="btn btn-danger waves-effect waves-light">
                                <i class="fa fa-backspace back font-size-16 align-middle me-2"></i> @Resources.Global.Back
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

</div>


@section EndBody{




    @if (requestStatus != null)
    {

        <script>

              notify = $.notify({
                  message: '@requestStatus.Message',

              }, {

                      type: '@requestStatus.Status' == 'Created' ? "success" :"danger",
                      animate: {
                          enter: 'animated flipInY',
                          exit: 'animated flipOutX',
                      }
                  });
        </script>

        TempData.Remove("RequestStatus");
    }
}
